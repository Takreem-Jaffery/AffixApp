<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0px" tools:context=".ui.ReportActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:id="@+id/main_toolbar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/affix_logo"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affix"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_corner" android:text="Logout"
            android:tint="@color/light_gray"
            android:layout_margin="10dp" android:id="@+id/logout_btn"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <Button android:id="@+id/button1" android:layout_width="210dp" android:layout_height="77dp" android:layout_gravity="center" android:text="Generate Reported Users Report"/>
    <Button android:id="@+id/button2" android:layout_width="210dp" android:layout_height="77dp" android:layout_gravity="center" android:layout_marginTop="100dp" android:text="Generate New Users Report"/>
    <Button android:id="@+id/button3" android:layout_width="210dp" android:layout_height="77dp" android:layout_gravity="center" android:layout_marginTop="-105dp" android:text="Generate Active Users Report"/>
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="42dp" android:layout_gravity="center" android:layout_marginTop="-210dp" android:textSize="25dp" android:text="Reports"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="20dp"
        android:text="Report Requests"/>
</FrameLayout>